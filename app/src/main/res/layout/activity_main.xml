<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="WORD ASSOCIATION TEST"
        android:fontFamily="@font/eagle"
        android:layout_margin="10dp"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="27sp"
        />




    <TextView
        android:id="@+id/noOfWordsText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No. of Words"
        android:layout_above="@+id/noOfWords"
        android:fontFamily="@font/poppinsb"
        android:layout_marginStart="10dp"
        />



    <EditText
        android:id="@+id/noOfWords"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/load"
        android:background="@color/white"
        android:text="80"
        android:padding="5dp"
        android:inputType="number"
        android:fontFamily="@font/poppinsb"
        android:layout_marginStart="10dp"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Go"
        android:fontFamily="@font/eagle"
        android:id="@+id/load"
        android:layout_margin="10dp"
        android:layout_centerInParent="true"
        />

    <LinearLayout
        android:id="@+id/settings_lin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        android:layout_centerInParent="true"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Time: (s)"
                android:fontFamily="@font/poppinsb"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:layout_weight="1"
                />

            <EditText
                android:id="@+id/edit_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="10"
                android:fontFamily="@font/poppinsb"
                android:inputType="number"

                />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Set: "
                android:fontFamily="@font/poppinsb"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:layout_weight="1"
                />

            <Spinner
                android:id="@+id/spinner_set"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"

                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sound: "
                android:fontFamily="@font/poppinsb"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:layout_weight="1"
                />
            <Switch
                android:id="@+id/sound_switch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                tools:ignore="UseSwitchCompatOrMaterialXml" />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Serial: "
                android:fontFamily="@font/poppinsb"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:layout_weight="1"
                />
            <Switch
                android:id="@+id/serial_switch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                tools:ignore="UseSwitchCompatOrMaterialXml" />


        </LinearLayout>

        <Button
            android:id="@+id/start_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Start"
            android:fontFamily="@font/eagle"
            android:layout_margin="5dp"
            />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/wat_lin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="WAT"
            android:id="@+id/wat"
            android:textColor="@color/black"
            android:textSize="40sp"
            android:textAlignment="center"
            android:fontFamily="@font/poppinsb"
            />
    </LinearLayout>



</RelativeLayout>